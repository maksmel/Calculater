<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson8" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#d90f31</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionButton">
        <item name="android:layout_height">70sp</item>
        <item name="android:layout_width">85sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#d90f31</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="Button">
        <item name="android:layout_height">70sp</item>
        <item name="android:layout_width">85sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#677387</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>

    </style>

</resources>